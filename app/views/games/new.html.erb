<div class="page">
  <h1>New Game</h1>

  <div class="letter-box">
    <% @letters.each do |item| %>
    <div class="random-letters"><p><%= item %></p></div>
    <% end %>
  </div>

  <%= form_with(url: "/score", local: true, method: "post", class: "class-form-for-the-test") do |f|%>
  <%= hidden_field_tag 'grid', @letters %>
  <%= hidden_field_tag 'start_time', @start_time %>
  <%= f.text_field :guess %>
  <%= f.submit "Search"%>
  <% end %>
</dir>
